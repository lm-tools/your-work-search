{{<layout}}
  {{$pageTitle}}{{#__}}dashboard.pageTitle{{/__}}{{/pageTitle}}
  {{$applicationContent}}
  <h2 class="heading-large">{{#__}}dashboard.header{{/__}}</h2>

    <div class="column-one-third no-padding">
      <div class="padded-column">
        {{>timeline}}
      </div>
      <div class="form-group">
        <a href="{{basePath}}/{{accountId}}/jobs/new" class="button">{{#__}}dashboard.add-job-button{{/__}}</a>
      </div>
      <div class="form-group">
        <a href="{{basePath}}/{{accountId}}/work-search-note/new" class="button button-secondary">{{#__}}dashboard.add-work-search-note-button{{/__}}</a>
      </div>
      <p class="text-secondary">
        {{#__}}dashboard.add-work-search-note-help-text{{/__}}
      </p>
    </div>

    <div class="column-two-thirds no-padding">
      <section class="space-top-double">
        <ul>
          {{#jobsAndNotes}}
            {{#isJob}}
            <li data-test="job-container-{{id}}" id="job-container-{{id}}" class="job-item">
              <div class="box box-full">
                <div>
                  <span class="lmt-label lmt-label-{{statusPriority}}"
                      data-test="status">{{statusString}}</span>
                  <span class="progression-status status-{{statusPriority}}"
                      data-test="statusDate">{{statusDateString}}</span>
                  </dl>
                </div>
                <div class="job-item-first-row">
                  <h4 class="bold-small" data-test="title">{{title}}, {{employer}}</h4>
                </div>
                <div>
                  <a class="button button-same-on-mobile" data-test="update-button"
                     href="{{basePath}}/{{accountId}}/jobs/{{id}}">{{#__}}dashboard.updateJobButton{{/__}}
                  </a>
                </div>
                <div class="text space-top-double">
                  <pre class="break-links">{{{detailsHTML}}}</pre>
                </div>
              </div>
              <p class="text-secondary font-xsmall">
                {{#__}}dashboard.updatedDate{{/__}}
                <span data-test="updated">{{updatedFormatted}}</span>
              </p>
            </li>
            {{/isJob}}
            {{#isNote}}
            <li data-test="job-container-{{id}}" id="job-container-{{id}}" class="job-item">
              <div class="box">
                <div>
                  <span class="lmt-label lmt-label-default"
                        data-test="status">Work search note</span>
                  <span class="progression-status status-{{statusPriority}}"
                        data-test="statusDate">{{statusDateString}}</span>
                </div>
                <div class="text space-top-double">
                  <pre class="break-links">{{{details}}}</pre>
                </div>
              </div>
              <p class="text-secondary font-xsmall">
                {{#__}}dashboard.postedOnDate{{/__}}
                <span data-test="updated">{{updatedFormatted}}</span>
              </p>
            </li>
            {{/isNote}}
          {{/jobsAndNotes}}
        </ul>
      </section>

      {{^hasJobs}}
        <p id="first-use-help">
        <ol class="list list-number">
          <li>{{#__}}dashboard.first-use-introduction-1{{/__}}</li>
          <li>{{#__}}dashboard.first-use-introduction-2{{/__}}</li>
          <li>{{#__}}dashboard.first-use-introduction-3{{/__}}</li>
        </ol>
        {{#__}}dashboard.first-use-help{{/__}}
        </p>
      {{/hasJobs}}
      {{#hasJobs}}
        <p id="has-job-help">
          {{#__}}dashboard.has-job-help{{/__}}
        </p>
      {{/hasJobs}}
    </div>
  {{/applicationContent}}

{{/layout}}
