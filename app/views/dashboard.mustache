{{<layout}}
  {{$pageTitle}}{{#__}}dashboard.pageTitle{{/__}}{{/pageTitle}}
  {{$applicationContent}}

    {{^hasRecentJobsOrNotes}}
      <h2 class="heading-large">Jobs you want</h2>
      <p class="text">
        {{#__}}dashboard.first-use-help{{/__}}
      </p>
      <div class="form-group space-after-add-a-job-button" >
        <a href="{{basePath}}/{{accountId}}/jobs/new" class="button">Start</a>
      </div>

    {{/hasRecentJobsOrNotes}}

  {{#hasRecentJobsOrNotes}}
    <h2 class="heading-xlarge">{{#__}}dashboard.header{{/__}}</h2>

      <p class="text">
        {{#__}}dashboard.first-use-help{{/__}}
      </p>
      <div class="form-group space-after-add-a-job-button" >
        <a href="{{basePath}}/{{accountId}}/jobs/new" class="button">{{#__}}dashboard.add-job-button{{/__}}</a>
      </div>

      <section class="space-top-double work-search-history">
        <ul>

            <h2 class="heading-large">{{#__}}dashboard.recent-work-search-heading{{/__}}</h2>
            <p class="text-secondary">Jobs added and updated since your last work search review ({{lastReviewedFormatted}})</p>

          {{#recentJobsAndNotes}}
            <li data-test="job-container-{{id}}" id="job-container-{{id}}" class="job-item">
              <div class="box">
                <div>
                  <span class="lmt-label lmt-label-{{statusPriority}}"
                      data-test="status">{{statusString}}</span>
                  <span class="progression-status status-{{statusPriority}}"
                      data-test="statusDate">{{statusDateString}}</span>
                </div>
                <div class="job-item-first-row">
                  <h3 class="no-padding heading-medium" data-test="title">{{title}}, {{employer}}</h3>
                </div>
                <div>
                  <a class="button" data-test="update-button"
                     href="{{basePath}}/{{accountId}}/jobs/{{id}}">{{#__}}dashboard.updateJobButton{{/__}}
                  </a>
                </div>
                <div class="text job-item-details readmore">
                  {{#detailsList}}
                    <div class="heading job-details-heading">{{title}}</div>

                    <pre class="padding-bottom">{{details}}</pre>
                  {{/detailsList}}
                </div>

              </div>
              <p class="text-secondary font-xsmall">
                {{#__}}dashboard.updatedDate{{/__}}
                <span data-test="updated">{{updatedFormatted}}</span>
              </p>
            </li>
          {{/recentJobsAndNotes}}

        </ul>
      </section>

  {{/hasRecentJobsOrNotes}}
  {{/applicationContent}}

{{/layout}}
