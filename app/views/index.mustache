{{<layout}}

  {{$applicationContent}}
    <h2 class="heading-xlarge">{{#__}}dashboard.header{{/__}}</h2>

    <p>
      {{#__}}dashboard.description{{/__}}
    </p>

    <a href="{{basePath}}/{{accountId}}/jobs/new" class="button">{{#__}}dashboard.add-job-button{{/__}}</a>

    <section class="space-top-double">
      <ul>
        {{#jobs}}
          <li id="job-{{id}}">
            <div class="box box-link box-fixed-height">
              <div class="grid-row">
                <div class="column-three-quarter">
                  <h4 class="bold-small" data-test="title">{{title}}</h4>
                  <p class="color-text">{{employer}}</p>
                </div>
                <div class="column-one-quarter color-text center">
                  <p class="progression-status">{{status}}</p>
                </div>
              </div>
              <form action="{{basePath}}/{{accountId}}/jobs/{{id}}?_method=PATCH" method="POST">
                <div class="grid-row">
                  <div class="form-group">
                    <fieldset>
                      <legend class="visuallyhidden">{{#__}}dashboard.progression-legend-screen-reader{{/__}}</legend>
                      {{#progression}}
                        <div class="column-one-quarter center space-top">
                          <label class="radio-block-label">{{label}}</label>
                          <input type="radio" value="{{name}}" name="status"
                                 data-submit-on-click
                                 {{#isChecked}}checked{{/isChecked}}>
                        </div>
                      {{/progression}}
                    </fieldset>
                  </div>
                  <div class="form-group js-hidden center">
                    <input type="submit" class="button">
                  </div>
                </div>
              </form>
            </div>
          </li>
        {{/jobs}}
      </ul>
    </section>

  {{/applicationContent}}

{{/layout}}
